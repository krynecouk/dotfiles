{
  // General -----------------------------------
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.guides.indentation": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.smoothScrolling": true,
  "git.decorations.enabled": false,

  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",

  "workbench.editor.showTabs": "none",
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.panel.defaultLocation": "right",
  "window.openFoldersInNewWindow": "on",
  "terminal.integrated.shellIntegration.history": 3000,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.suggest.enabled": true,

  "explorer.openEditors.visible": 1,
  "window.nativeTabs": true,
  "security.workspace.trust.untrustedFiles": "open",

  // Theme -----------------------------------
  // "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.fontSize": 14,
  "workbench.colorTheme": "GitHub Dark Default",
  // "editor.lineHeight": 30,
  "editor.fontFamily": "JetBrains Mono",

  // Vim ---------------------------------------
  "vim.statusBarColorControl": false,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.smartcase": true,
  "vim.useSystemClipboard": true,
  // Bindings
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    // Navigation
    {
      "before": ["<leader>", ","],
      "commands": [
        "workbench.action.showAllEditorsByMostRecentlyUsed",
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    },
    // Bookmarks
    {
      "before": ["'"],
      "commands": ["bookmarks.listFromAllFiles"]
    },
    {
      "before": ["\""],
      "commands": ["clipring.selectAndPasteRingItem"]
    },
    {
      "before": ["m"],
      "commands": ["bookmarks.toggleLabeled"]
    },
    // Code
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["g", "S"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["g", "/"],
      "commands": ["workbench.action.quickTextSearch"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": [
        {
          "command": "editor.action.formatDocument"
        },
        {
          "command": "python.sortImports"
        }
      ]
    },
    {
      "before": ["<leader>", "g", "g"],
      "commands": ["magit.status"]
    },
    // Project
    {
      "before": ["<leader>", "p", "w"],
      "commands": ["workbench.action.files.saveAll"]
    },
    // Open/Toggle
    {
      "before": ["ctrl+`"],
      "commands": ["workbench.action.terminal.toggleTerminal"]
    },
    {
      "before": ["ctrl+."],
      "commands": ["editor.action.triggerSuggest"],
    },
    {
      "before": ["<leader>", "t", "t"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "t", "s"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    },
    {
      "before": ["<leader>", "o", "s"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["editor.action.formatSelection"]
    }
  ],

  // Lang ---------------------------------------
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    // "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.languageServer": "Pylance",
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.envFile": "${workspaceFolder}/.env",
  "launch": {
    "envFile": "${workspaceFolder}/.env"
  },
  "editor.minimap.enabled": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.titleBarStyle": "custom",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.maxTsServerMemory": 5128,
  "debug.onTaskErrors": "debugAnyway",
  "explorer.confirmDragAndDrop": false,
  "workbench.activityBar.location": "hidden",
  "window.commandCenter": false,
  "extensions.ignoreRecommendations": true,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "interactiveWindow.executeWithShiftEnter": true,
  "explorer.confirmDelete": false,
  "breadcrumbs.enabled": false,
  "breadcrumbs.filePath": "off",
  "breadcrumbs.icons": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "chat.agent.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": false,
  "rapidapi.terminalLink.enabled": false,
}
